{
  "name": "abc-dao",
  "version": "1.0.0",
  "private": true,
  "description": "ABC DAO - Community Grants for Farcaster Builders",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspace=packages/frontend",
    "build:contracts": "cd packages/contracts && forge build",
    "test:contracts": "cd packages/contracts && forge test",
    "deploy:contracts": "cd packages/contracts && forge script script/Deploy.s.sol --rpc-url ${RPC_URL} --broadcast"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}